<h1>Editing Fixed Monthly Expense</h1>
 
<%= form_for :fixed_monthly_expense, url: fixed_monthly_expense_path(@fixed_monthly_expense), method: :patch do |f| %>
 
  <% if @fixed_monthly_expense.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@fixed_monthly_expense.errors.count, "error") %> prohibited
        this fixed_monthly_expense from being saved:
      </h2>
      <ul>
        <% @fixed_monthly_expense.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :expense %><br>
    <%= f.text_field :expense %>
  </p>
 
  <p>
    <%= f.label :amount %><br>
    <%= f.text_field :amount, data: {autonumeric: true} %>
  </p>  
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
